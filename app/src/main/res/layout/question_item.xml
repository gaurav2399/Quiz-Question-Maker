<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp" xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                       xmlns:app="http://schemas.android.com/apk/res-auto"
                                                       xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                       android:layout_height="350dp" android:id="@+id/relativeLayout2"
                                                       android:background="@drawable/layout_background"
                                                       android:padding="15dp">

        <TextView
                android:text="Question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView6"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="@+id/questionId"
                app:layout_constraintTop_toTopOf="parent"
                android:textStyle="bold"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/questionId"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView6" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp" app:layout_constraintHorizontal_bias="1.0"
                android:textSize="20sp" tools:text="Question here..."/>
        <TextView
                android:text="A :"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView7" android:textSize="24sp"
                android:textColor="#000000" android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="@+id/questionId" android:textStyle="bold"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/questionId"/>
        <TextView
                android:text="TextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/option1id" android:textSize="18sp"
                android:padding="5dp"
                app:layout_constraintStart_toEndOf="@+id/textView7" android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="@+id/questionId"
                app:layout_constraintBaseline_toBaselineOf="@+id/textView7"/>
        <TextView
                android:text="B :"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView9" android:textSize="24sp"
                android:textColor="#000000" android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/textView7" android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/textView7"/>
        <TextView
                android:text="TextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/option2id" android:textSize="18sp" app:layout_constraintStart_toEndOf="@+id/textView9"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="@+id/option1id"
                android:padding="5dp"
                app:layout_constraintBaseline_toBaselineOf="@+id/textView9"/>
        <TextView
                android:text="C :"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView11" android:textSize="24sp"
                android:textStyle="bold" android:textColor="#000000"
                app:layout_constraintStart_toStartOf="@+id/textView9" android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/textView9"/>
        <TextView
                android:text="TextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/option3id" android:textSize="18sp" app:layout_constraintStart_toEndOf="@+id/textView11"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="@+id/option2id"
                android:padding="5dp" app:layout_constraintBaseline_toBaselineOf="@+id/textView11"/>
        <TextView
                android:text="D :"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView13" android:textSize="24sp"
                android:textColor="#000000" android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/textView11" android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/textView11"/>
        <TextView
                android:text="TextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/option4id" android:textSize="18sp" app:layout_constraintEnd_toEndOf="@+id/option3id"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toEndOf="@+id/textView13"
                android:layout_marginStart="8dp" android:padding="5dp"
                app:layout_constraintBaseline_toBaselineOf="@+id/textView13"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>
